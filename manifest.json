{
  "manifest_version": 3,
  "name": "Snippet Saver",
  "description": "Save and manage text snippets from any webpage. Export and import your saved selections easily.",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "<all_urls>"
  ]
}